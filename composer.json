{
    "name": "taoti/drupal-project",
    "description": "Builds a Drupal Project",
    "type": "project",
    "license": "GPL-2.0",
    "authors": [
        {
            "name": "Richard Allen",
            "email": "rallen@taoti.com",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packagist.drupal-composer.org"
        },
        {
            "type": "package",
            "package": {
                "name": "taoti/taoti_bootstrap",
                "version": "0.1",
                "source": {
                    "url": "https://github.com/Taoti/taoti_bootstrap",
                    "type": "git",
                    "reference": "origin/master"
                }
            }
        }
    ],
    "require": {
        "composer/installers": "^1.0.20",
        "drupal/core": "8.0.*",
        "drush/drush": "8.*",
        "drupal/console": "~0.8",
        "drupal/devel": "8.1.*@dev",
        "drupal/token": "8.1.*@dev",
        "taoti/taoti_bootstrap": "0.1"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-install-cmd": "scripts/composer/post-install.sh"
    },
    "extra": {
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "web/drush/commands/{$name}": ["type:drupal-drush"]
        }
    }
}
